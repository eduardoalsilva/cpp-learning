#include <iostream>

using std::cout;
using std::cin;
using std::endl;

#include <string>
using std::string;
using std::getline;

class GradeBook
{
public:
  void displayMessage( string courseName)
  {
    cout << "Welcome to the grade book for \n" << courseName << endl << "!";
  }

};

int main(){
  string nameOfCourse;
  GradeBook myGradeBook;

  cout << "Enter the name of the course:" << endl;
  getline(cin, nameOfName);
  cout << endl;

  myGradeBook.displaymessage(nameOfCourse);

  return 0;

}
  
